# ER Patient Forecast MLOps - Environment Configuration
# Copy this file to .env and update values as needed

# SERVICE PORTS
MLFLOW_PORT=5050
PREFECT_PORT=4200
POSTGRES_PORT=5432
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
PGADMIN_PORT=16543

# DATABASE CONFIGURATION
POSTGRES_USER=postgres
POSTGRES_PASSWORD=admin
POSTGRES_DB=postgres

# MLflow Database
MLFLOW_DB_NAME=mlflow_db
MLFLOW_DB_USER=mlflow_user
MLFLOW_DB_PASSWORD=admin

# Prefect Database
PREFECT_DB_NAME=prefect_db
PREFECT_DB_USER=prefect_user
PREFECT_DB_PASSWORD=admin

# Application Database
APP_DB_NAME=er_forecast_db
APP_DB_USER=app_user
APP_DB_PASSWORD=admin

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@erforecast.local
PGADMIN_DEFAULT_PASSWORD=admin

# MLFLOW CONFIGURATION
MLFLOW_ARTIFACT_ROOT=/mlflow/artifacts
MLFLOW_TRACKING_URI=http://mlflow:5000

# PREFECT CONFIGURATION
PREFECT_API_URL=http://prefect:4200/api
PREFECT_LOCAL_STORAGE_PATH=/prefect/storage

# FILE PATHS
MODELS_PATH=/app/models
LOGS_PATH=/app/logs
CONFIG_PATH=/app/config

# WEATHER API
WEATHER_API_BASE_URL=https://archive-api.open-meteo.com/v1/era5
HOSPITAL_LATITUDE=59.6099
HOSPITAL_LONGITUDE=16.5448

# MODEL CONFIGURATION
N_HORIZONS=7
OPTUNA_N_TRIALS=300
MODEL_PROMOTION_MAE_THRESHOLD=10
MODEL_VERSIONS_TO_KEEP=52

# MONITORING
PROMETHEUS_RETENTION_TIME=30d
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# SYSTEM
TZ=Europe/Stockholm
PYTHONUNBUFFERED=1
