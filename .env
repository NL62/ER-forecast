# ==============================================================================
# MLFLOW CONFIGURATION
# ==============================================================================
MLFLOW_PORT=5011
MLFLOW_SERVER_ALLOWED_HOSTS=*
MLFLOW_SERVER_HOST=localhost
MLFLOW_SERVER_PORT=5011

# Database configuration for MLflow backend store
MLFLOW_DB_USER=mlflow_user
MLFLOW_DB_PASSWORD=mlflow_password
MLFLOW_DB_NAME=mlflow_db

# ==============================================================================
# MINIO CONFIGURATION
# ==============================================================================
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=mlflow-artifacts

# ==============================================================================
# POSTGRESQL CONFIGURATION
# ==============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_password
POSTGRES_DB=postgres
POSTGRES_PORT=5432

# ==============================================================================
# PGADMIN CONFIGURATION
# ==============================================================================
